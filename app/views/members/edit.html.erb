<div class="main">
  <div class="area">
    <div id="tab-1" class="switch"></div>
    <div id="tab-2" class="switch"></div>
    <div class="tabBtn">
      <ul class="tabBtn">
        <li><a href="/#tab-1" data-turbolinks="false">ゲーム</a></li>
        <li><a href="/#tab-2" data-turbolinks="false">メンバー</a></li>
      </ul>
    </div>
    <div class="tab-contents">
      <div class="title">
        既存メンバーを編集
      </div>
      <%= form_tag("/members/#{params[:id]}/update") do %>
      <div class="form">
        <div class="member-form">
          <p>名前</p>
          <input type="text" name="member_name" class="text-form" value="<%= @member.name %>">
          <input type="submit" class="create-btn" value="更新">
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
